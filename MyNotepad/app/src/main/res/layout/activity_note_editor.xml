<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanoop.mynotepad.activities.NoteEditorActivity">

    <EditText
        android:id="@+id/etxt_title"
        android:layout_margin="@dimen/margin_padding_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_title"
        android:padding="@dimen/margin_padding_tiny"
        android:gravity="left"
        android:singleLine="true"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etxt_content"
        android:layout_below="@id/etxt_title"
        android:layout_margin="@dimen/margin_padding_tiny"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:hint="@string/enter_content"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_padding_tiny"
        android:gravity="top"
        android:inputType="textMultiLine" />

</RelativeLayout>
